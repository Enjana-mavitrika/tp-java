package dessin;

public class Rectangle extends Quadrilatere
{
    // constructors
    public Rectangle (Point p1, Point p2)
    {
	super();
	Point tabPoint[] = new Point[2];
	tabPoint = this.construire(p1, p2);
	
    }

    // methods
    private Point[2] construire (Point p1, Point p2)
    {
	Point tabPoint[] = new Point[2];
	tabPoint[0].setX(p2.getX());
	tabPoint[0].setY(p1.getY());
	tabPoint[1].setX(p1.getX() + p2.getX() - tabPoint[0].getX());
	tabPoint[1].setY(P1.getY() + p2.getY() - tabPoint[0].getY());

	return tabPoint;
    }
}
